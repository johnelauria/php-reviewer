<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twopixeled.zendreviewer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/php7_exam_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/php7_exam_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.twopixeled.zendreviewer.MainActivity"
            android:label="@string/app_label"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.twopixeled.zendreviewer.QuestionsListActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_label"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.QUESTIONS_LIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.twopixeled.zendreviewer.AboutAppActivity"
            android:label="@string/about_label">
            <intent-filter>
                <action android:name="android.intent.action.ABOUT_APP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>